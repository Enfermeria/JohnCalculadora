<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tecladoCientifico"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Teclas sin cos tan raiz cuadrado -->
    <LinearLayout
        android:id="@+id/teclasCFila1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/teclaSin"
            style="@style/botonCientifico"
            android:text="Sin" />

        <Button
            android:id="@+id/teclaCos"
            style="@style/botonCientifico"
            android:text="Cos" />

        <Button
            android:id="@+id/teclaTan"
            style="@style/botonCientifico"
            android:text="Tan" />

        <Button
            android:id="@+id/teclaSqrt"
            style="@style/botonCientifico"
            android:text="√x" />

        <Button
            android:id="@+id/teclaCuadrado"
            style="@style/botonCientifico"
            android:text="x²" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/teclasCFila2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/teclaASin"
            style="@style/botonCientifico"
            android:text="Asin" />

        <Button
            android:id="@+id/teclaACos"
            style="@style/botonCientifico"
            android:text="Acos" />

        <Button
            android:id="@+id/teclaATan"
            style="@style/botonCientifico"
            android:text="Atan" />

        <Button
            android:id="@+id/tecla1SobreX"
            style="@style/botonCientifico"
            android:text="1/x" />

        <Button
            android:id="@+id/teclaAbsoluto"
            style="@style/botonCientifico"
            android:text="|x|" />
    </LinearLayout>


</LinearLayout>