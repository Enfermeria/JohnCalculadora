<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JohnCalculadora" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Estilos para los botones -->
    <style name="boton">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="botonDigito" parent="boton">
        <item name="backgroundTint">@color/rojo_claro</item>
        <item name="android:onClick">onClickTeclaDigito</item>
    </style>

    <style name="botonC" parent="boton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:onClick">onClickTeclaC</item>
    </style>

    <style name="botonOperacion" parent="boton">
        <item name="backgroundTint">@color/gris</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">50</item>
        <item name="android:onClick">onClickTeclaOperacion</item>
    </style>

    <style name="botonPunto" parent="boton">
        <item name="backgroundTint">@color/gris</item>
        <item name="android:onClick">onClickTeclaPunto</item>
    </style>

    <style name="botonIgual" parent="boton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:onClick">onClickTeclaOperacion</item>
    </style>

</resources>
